<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/radius_3"
    app:contentPadding="@dimen/padding_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_container">

        <ImageView
            android:layout_width="@dimen/width_21"
            android:layout_height="@dimen/width_21"
            android:scaleType="fitCenter"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_5"
            android:src="@drawable/ic_author"
            android:id="@+id/iv_author" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_who"
            android:layout_marginStart="@dimen/margin_30"
            android:layout_marginLeft="@dimen/margin_30"
            android:paddingTop="3dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font_10"
            android:maxLines="1" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_desc"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@id/iv_author"
            android:textSize="@dimen/font_10"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_10"
            android:maxLines="3" />

        <ImageView
            android:layout_width="@dimen/width_60"
            android:layout_height="@dimen/width_60"
            android:id="@+id/iv_image_first"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_toEndOf="@id/tv_desc"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_toRightOf="@id/tv_desc" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/iv_image_second"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_toEndOf="@id/iv_image_first"
            tools:ignore="ContentDescription"
            android:layout_toRightOf="@id/iv_image_first" />

        <ImageView
            android:layout_width="@dimen/width_60"
            android:layout_height="@dimen/width_60"
            android:id="@+id/iv_image_third"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_toEndOf="@id/iv_image_second"
            android:layout_toRightOf="@id/iv_image_second" />

    </RelativeLayout>

</android.support.v7.widget.CardView>